{
  "name": "ebers",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:init": "node scripts/init-db.js",
    "install:electron": "node scripts/install-electron.js",
    "postinstall": "node scripts/post-install.js",
    "electron": "NODE_ENV=development electron .",
    "electron:standalone": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:debug": "pkill -f electron || true && NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "node scripts/build-electron.js",
    "build:electron": "tsc --project electron/tsconfig.json",
    "generate:icons": "node scripts/generate-icons.js && node scripts/generate-favicon.js",
    "prepare:build": "node scripts/prepare-build.js",
    "dist": "npm run prepare:build && electron-builder",
    "dist:mac": "npm run prepare:build && electron-builder --mac",
    "dist:win": "npm run prepare:build && electron-builder --win",
    "dist:linux": "npm run prepare:build && electron-builder --linux",
    "pack": "npm run prepare:build && electron-builder --dir",
    "pack:mac": "npm run prepare:build && electron-builder --mac --dir",
    "pack:win": "npm run prepare:build && electron-builder --win --dir",
    "pack:linux": "npm run prepare:build && electron-builder --linux --dir",
    "checksums": "node scripts/generate-checksums.js",
    "release": "node scripts/release.js"
  },
  "dependencies": {
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@types/qrcode": "^1.5.6",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "fast-check": "^3.22.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "typescript": "5.9.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.ebers.app",
    "productName": "Ebers",
    "directories": {
      "output": "dist",
      "buildResources": "public/icons"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "lib/db/**/*",
      "drizzle/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      ".next/**/*",
      "node_modules/next/**/*",
      "node_modules/sharp/**/*",
      "node_modules/@next/**/*",
      "node_modules/jsdom/**/*",
      "node_modules/isomorphic-dompurify/**/*",
      "node_modules/dompurify/**/*",
      "node_modules/sql.js/**/*"
    ],
    "extraResources": [
      {
        "from": "drizzle",
        "to": "drizzle",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.medical",
      "icon": "public/icons/icon-for-icns.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Ebers ${version}",
      "backgroundColor": "#197BBD"
    },
    "win": {
      "icon": "public/icons/icon-for-ico.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ebers"
    },
    "linux": {
      "icon": "public/icons/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
